    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    
    <icon src="icon.png" gap:role="default" />
    <icon src="icon_57.png" gap:platform="ios" width="57" height="57" />
    <icon src="icon_72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icon_114.png" gap:platform="ios" width="114" height="114" />
    
    <icon src="icon_57.png" gap:platform="android" gap:density="ldpi" />
    <icon src="icon_72.png" gap:platform="android" gap:density="mdpi" />
    <icon src="icon_114.png" gap:platform="android" gap:density="hdpi" />
    
	<gap:splash src="splash.png" width="640" height="960" />
	<gap:splash src="splash.png" gap:platform="android" gap:density="mdpi" />

	<feature name="http://api.phonegap.com/1.0/network"/>

	<preference name="orientation" value="landscape" />
	<preference name="webviewbounce" value="false" />
</widget>